 
<div class="jumbotron">
    <h2>Add an Event</h2>
    <form class = "addForm" action="/" method="POST">
        <div class = "form-group">
            <label for = "eventName">Event Name</label>
            <input type = "text" id = "eventName" name="event_name">
        </div> <!-- end eventName -->

        <div class = "form-group">
            <label for = "eventDate">Event Date</label>
            <input type = "text" id = "eventDate" name="event_date">
        </div> <!-- end eventDate -->

        <div class = "form-group dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="formatButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Event Format <span class="caret"></span>
        </button>
            <ul class="dropdown-menu" aria-labelledby="formatButton">
                <li><a href="#" name = "format" value = "standard">Standard</a></li>
                <li><a href="#" name = "format" value = "modern">Modern</a></li>
                <li><a href="#" name = "format" value = "legacy">Legacy</a></li>
                <li><a href="#" name = "format" value = "vintage">Vintage</a></li>
                <li><a href="#" name = "format" value = "limited">Limited</a></li>
                <li><a href="#" name = "format" value = "block">Block</a></li>
                <li><a href="#" name = "format" value = "mixed">Mixed</a></li>
            </ul>
        </div> <!-- end format dropdown-->

        <div class="form-group" id="roundForm">
            {{> partials/addForm-partial}}
        </div>

        <button class="" type = "submit">Submit Event</button>

    </form> <!-- end addForm -->
</div>  <!-- end jumbotron -->